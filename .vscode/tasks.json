{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CMake project",
            "type": "shell",
            "command": "cmake --fresh -B build -G Ninja && cmake --build build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean CMake project",
            "type": "shell",
            "command": "cmake --build build --target clean",
            "problemMatcher": [],
        }
    ]
}